extends base

block files 
    link(rel="stylesheet", href="css/reusablePage.css")
    link(rel="stylesheet", href="css/categories.css")
    link(rel='stylesheet', href='css/resuable.css')
    link(rel='stylesheet', href='css/mediaQueries.css')
    script(defer type="module" src="js/categories.js")
    script(defer type="module" src="js/util.js")
    script(defer, src='js/resuable.js')
    script(defer src="js/showAlert.js") 


block content 
  <div class="div-carousel div-carousel-overlay hidden-carousel">
      <div class="carousel-overlay-blur"></div>
      <!-- Close button -->
      <ion-icon class="btn-close-carousel" name="close-outline"></ion-icon>
      <!-- Left arrow -->
      <ion-icon class="scroll-arrow scroll-left" name="chevron-back-outline"></ion-icon>

      <div class="overlay-content"></div>

      <!-- Right arrow -->
      <ion-icon class="scroll-arrow scroll-right" name="chevron-forward-outline"></ion-icon>
  </div>
  .page.page-categories
    .page-wrapper
      // Sidebar
      .div-categories-sidebar
        // Sidebar title
        .div-sidebar-title
          p.sidebar-title List
          p.btn-collapse <ion-icon name="arrow-down-outline"></ion-icon>
        // Sidebar content
        .div-sidebar-content
          .div-category
            // Main Category
            .div-main-category
              p.main-category 1. Residential
              ion-icon.btn-sub-cat-slide(name='chevron-down-outline')
            // Sub Categories
            .div-sub-categories.hide-cate
              .sub-categories-wrapper
                p.sub-category Office
                p.sub-category Kitchen
                p.sub-category Master Bedroom
                p.sub-category Bathroom
          .div-category
            // Main Category
            .div-main-category
              p.main-category 2. Office
              ion-icon.btn-sub-cat-slide(name='chevron-down-outline')
            // Sub Categories
            .div-sub-categories.hide-cate
              .sub-categories-wrapper
                p.sub-category Conferenfce
                p.sub-category Lobby
                p.sub-category Cabin
                p.sub-category Reception
          .div-category
            // Main Category
            .div-main-category.hide-cate
              p.main-category 3. Hospital
              ion-icon.btn-sub-cat-slide(name='chevron-down-outline')
            // Sub Categories
            .div-sub-categories
              .sub-categories-wrapper
                p.sub-category Room
                p.sub-category Lobby
                p.sub-category Cabin
                p.sub-category Reception
      // Display Categories
      .div-display-categories
        .display-categories-wrapper
          .div-page-title
            p.page-title.animate-title.categories-title &mdash; Categories
          .div-content-category
            p.display-category-title.animate-card-right Use the list navigation to explore our work